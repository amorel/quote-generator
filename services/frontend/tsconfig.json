{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Important : empêche la génération de fichiers
    "noEmit": true,

    // Options React
    "jsx": "react-jsx",

    // Options utiles
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@quote-generator/shared": ["../../shared/src"]
    }
  },
  // Include spécifie quels fichiers sont à vérifier pour le typage
  "include": ["src"],
  // References pour la configuration spécifique à Node
  "references": [{ "path": "./tsconfig.node.json" }]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "composite": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@quote-generator/shared": ["../../shared/src"]
    }
  },
  "references": [{ "path": "../../shared" }],
  "include": ["src/**/*", "src/types/*.d.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}

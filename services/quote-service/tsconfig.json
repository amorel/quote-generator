{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "composite": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@quote-generator/shared": ["../../shared/src"]
    }
  },
  "references": [{ "path": "../../shared" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

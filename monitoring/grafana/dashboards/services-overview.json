{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Service Health",
      "type": "stat",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "title": "HTTP Request Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"api-gateway\"}[5m])",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "title": "Response Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum{job=\"api-gateway\"}[5m]) / rate(http_request_duration_seconds_count{job=\"api-gateway\"}[5m])",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "title": "Service Dependencies Health",
      "type": "statusmap",
      "targets": [
        {
          "expr": "up{job=~\"mongodb-exporter|rabbitmq|postgres-exporter\"}",
          "legendFormat": "{{job}}"
        }
      ]
    },
    {
      "title": "Error Rate by Service",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total{status=~\"5.*\"}[5m])",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "title": "RabbitMQ Queue Depth",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rabbitmq_queue_messages",
          "legendFormat": "{{queue}}"
        }
      ]
    },
    {
      "title": "Database Connections",
      "type": "gauge",
      "targets": [
        {
          "expr": "mongodb_connections_current",
          "legendFormat": "MongoDB"
        },
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "PostgreSQL"
        }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["services"],
  "title": "Services Overview",
  "version": 1
}
